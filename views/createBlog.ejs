<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Create Blog</title>
</head>
<body class="bg-gradient-to-br from-yellow-400 via-red-500 to-pink-500 text-gray-800 min-h-screen">

  <%- include('navbar') %>
  
  <div class="flex items-center justify-center px-6 min-h-screen">
    <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-6">
      <h1 class="text-4xl font-bold text-center text-blue-600 mb-6">Create New Blog</h1>
      <form action="/blogs/create" method="POST" class="space-y-4">
        <input 
          type="text" 
          name="title" 
          placeholder="Blog Title" 
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        >
        <textarea 
          name="content" 
          placeholder="Blog Content" 
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 h-40"
          required
        ></textarea>
        <select 
          name="category" 
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="Programming">Programming</option>
          <option value="Health">Health</option>
          <option value="Travel">Travel</option>
          <option value="Other">Other</option>
        </select>
        <button 
          type="submit" 
          class="w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition">
          Submit
        </button>
      </form>
    </div>
  </div>
  <script>
    window.addEventListener("pageshow", function (event) {
        if (event.persisted) {
            console.log("Page loaded from cache.");

            fetch("/auth/check", { method: "GET", credentials: "same-origin" })
                .then((response) => {
                    if (!response.ok) {

                        window.location.href = "/login";
                    }
                })
                .catch((err) => {
                    console.error("Authentication check failed:", err);
                    window.location.href = "/login";
                });
        }
    });
</script>    
</body>
</html>
